@model TechJobs.ViewModels.SearchJobsViewModel


<table class="job-listing">
    @{
        // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
    }
        @if (Model.Jobs != null)
        {

            @foreach (var job in Model.Jobs)
            {
                <tr>
                    <td>Name</td>
                    <td>@job.Name</td>
                </tr>
                <tr>
                    <td>Employer</td>
                    <td>@job.Employer</td>
                </tr>
                <tr>
                    <td>Location</td>
                    <td>@job.Location</td>
                </tr>
                <tr>
                    <td>Skill</td>
                    <td>@job.CoreCompetency</td>
                </tr>
                <tr>
                    <td>Position Type</td>
                    <td>@job.PositionType</td>
                </tr>
            }
        }
    </table>
